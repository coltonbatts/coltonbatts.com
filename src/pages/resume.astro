---
import BaseLayout from '../layouts/BaseLayout.astro';
import resume from '../data/resume_source.json';

const { summary, experience, skills } = resume;
---

<BaseLayout title="Resume" description="Professional resume and experience.">
	<div class="max-w-4xl mx-auto px-6 py-20">
		<h1 class="text-3xl font-bold mb-10 tracking-tighter">Resume</h1>

		<div class="prose max-w-none text-charcoal/90">
			<p class="text-lg leading-snug font-medium mb-8">
				Professional experience and core competencies.
			</p>
			<a 
				href="/resume/Colton_Batts_Resume.pdf" 
				class="border border-charcoal px-6 py-2 text-sm font-bold hover:bg-charcoal hover:text-white transition-colors inline-block mb-16"
			>
				Download PDF
			</a>
		</div>

		<section class="mt-12 bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)]">
			<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-6 pb-2 border-b border-gray-100">Professional Summary</h2>
			<p class="font-medium leading-snug text-charcoal/80">{summary}</p>
		</section>

		<section class="mt-8 bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)] text-charcoal/90">
			<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-10 pb-2 border-b border-gray-100">Experience</h2>
			<div class="grid gap-12">
				{experience.map((role) => (
					<div class="relative pl-6 border-l-2 border-gray-100">
						<h3 class="text-xl font-bold">{role.title}</h3>
						<p class="text-sm font-bold text-charcoal/60 uppercase tracking-tight">{role.company}</p>
						<p class="text-[10px] font-bold text-charcoal/30 uppercase tracking-widest mt-1 mb-6">{role.location} Â· {role.dates}</p>
						<ul class="space-y-2 text-sm font-medium">
							{role.bullets.map((bullet) => (
								<li class="flex items-start gap-3">
									<span class="text-charcoal/20 mt-1">/</span>
									<span class="leading-relaxed">{bullet}</span>
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</section>

		<section class="mt-8 bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)]">
			<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-8 pb-2 border-b border-gray-100">Skills</h2>
			<div class="grid gap-10 md:grid-cols-2">
				{skills.map((group) => (
					<div>
						<h3 class="text-xs font-bold mb-4 uppercase text-charcoal/60">{group.category}</h3>
						<div class="flex flex-wrap gap-2">
							{group.items.map((item) => (
								<span class="text-[11px] font-bold bg-gray-50 px-2 py-1 border border-gray-100 text-charcoal/70">
									{item}
								</span>
							))}
						</div>
					</div>
				))}
			</div>
		</section>
	</div>
</BaseLayout>
