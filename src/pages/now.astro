---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Now" description="What I'm working on now.">
	<div class="max-w-4xl mx-auto px-6 py-20">
		<h1 class="text-3xl font-bold mb-10 tracking-tighter">Status</h1>
		
		<div class="prose max-w-none text-charcoal/90">
			<div class="grid gap-8 md:grid-cols-2">
				<section class="bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)]">
					<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-6 pb-2 border-b border-gray-100">Building</h2>
					<ul class="space-y-3 font-medium">
						<li class="flex items-center gap-3"><span class="text-charcoal/20">/</span> Offline-first tools</li>
						<li class="flex items-center gap-3"><span class="text-charcoal/20">/</span> This site</li>
					</ul>
				</section>
				
				<section class="bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)]">
					<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-6 pb-2 border-b border-gray-100">Learning</h2>
					<ul class="space-y-3 font-medium">
						<li class="flex items-center gap-3"><span class="text-charcoal/20">/</span> Astro & SSG</li>
						<li class="flex items-center gap-3"><span class="text-charcoal/20">/</span> Editorial design</li>
					</ul>
				</section>
			</div>
			
			<p class="text-[10px] font-bold uppercase mt-16 tracking-widest text-charcoal/30">
				REF: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\//g, '.')}
			</p>
		</div>
	</div>
</BaseLayout>
