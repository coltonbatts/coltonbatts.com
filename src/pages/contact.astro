---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch.">
	<div class="min-h-[80vh] flex flex-col items-center justify-center max-w-5xl mx-auto px-6 py-20">
		<div class="contact-shell">
			<div class="contact-shell__header text-center mx-auto">
				<p class="contact-kicker">Direct line</p>
				<h1 class="contact-title">Contact</h1>
				<p class="contact-subtitle">Best way to reach me is email. Keep it simple.</p>
			</div>

			<div class="contact-terminal mx-auto" role="region" aria-label="Contact details">
				<div class="contact-terminal__bar">
					<span class="contact-dot" aria-hidden="true"></span>
					<span class="contact-dot" aria-hidden="true"></span>
					<span class="contact-dot" aria-hidden="true"></span>
					<span class="contact-terminal__label">message://colton</span>
				</div>

				<div class="contact-terminal__body text-center">
					<p class="contact-line">for projects / collaboration / product + design work</p>
					<a href="mailto:colton.batts@gmail.com" class="contact-email">colton.batts@gmail.com</a>
					<p class="contact-meta">response window: usually same day</p>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	.contact-shell {
		display: grid;
		gap: 2rem;
		width: 100%;
	}

	.contact-shell__header {
		max-width: 38rem;
	}

	.contact-kicker {
		font-family: 'Geist Mono', monospace;
		font-size: 0.72rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		opacity: 0.72;
		margin-bottom: 0.6rem;
	}

	.contact-title {
		font-size: clamp(2rem, 5vw, 3.25rem);
		line-height: 0.96;
		margin: 0;
	}

	.contact-subtitle {
		margin-top: 0.8rem;
		opacity: 0.78;
	}

	.contact-terminal {
		border: 1px solid rgba(255, 255, 255, 0.25);
		background: #000;
		width: 100%;
		max-width: 52rem;
	}

	.contact-terminal__bar {
		display: flex;
		align-items: center;
		gap: 0.45rem;
		padding: 0.62rem 0.8rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
	}

	.contact-dot {
		width: 7px;
		height: 7px;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.45);
	}

	.contact-terminal__label {
		margin-left: 0.5rem;
		font-family: 'Geist Mono', monospace;
		font-size: 0.72rem;
		letter-spacing: 0.09em;
		opacity: 0.7;
	}

	.contact-terminal__body {
		padding: 2rem 1.5rem 2.5rem;
		display: grid;
		gap: 1.2rem;
		place-items: center;
	}

	.contact-line,
	.contact-meta {
		font-family: 'Geist Mono', monospace;
		font-size: 0.82rem;
		opacity: 0.76;
		margin: 0;
	}

	.contact-email {
		display: inline-block;
		font-family: 'Geist Pixel Circle', sans-serif;
		/* Cranked up size to showcase the pixel geometry */
		font-size: clamp(1.5rem, 6vw, 3.5rem);
		letter-spacing: -0.01em;
		line-height: 1.1;
		color: #fff;
		text-decoration: none;
		border-bottom: 2px solid rgba(255, 255, 255, 0.35);
		padding-bottom: 0.24rem;
		transition: all 0.2s ease;
	}

	.contact-email:hover {
		opacity: 1;
		border-bottom-color: #fff;
		transform: translateY(-2px);
	}
</style>
