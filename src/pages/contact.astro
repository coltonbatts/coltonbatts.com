---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch.">
	<div class="max-w-4xl mx-auto px-6 py-12">
		<h1 class="text-3xl font-bold mb-8">Contact</h1>
		
		<div class="prose prose-lg max-w-none">
			<p class="text-lg leading-relaxed mb-6">
				If you want to get in touch about a project, collaboration, or just say hello, 
				reach out via email or find me online.
			</p>
			
			<div class="space-y-4">
				<p>
					<strong>Email:</strong> 
					<a href="mailto:hello@coltonbatts.com" class="underline hover:no-underline">
						hello@coltonbatts.com
					</a>
				</p>
			</div>
		</div>
	</div>
</BaseLayout>
