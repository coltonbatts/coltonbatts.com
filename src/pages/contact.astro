---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch.">
	<div class="max-w-4xl mx-auto px-6 py-20">
		<h1 class="text-3xl font-bold mb-10 tracking-tighter">Contact</h1>
		
		<div class="prose max-w-none text-charcoal/90">
			<p class="text-lg leading-snug font-medium mb-12">
				For projects, collaboration, or general inquiries.
			</p>
			
			<div class="bg-paper p-8 border border-gray-200/60 shadow-[2px_2px_0_rgba(0,0,0,0.02)] inline-block">
				<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-charcoal/40 mb-4 pb-2 border-b border-gray-100">Electronic Mail</h2>
				<a href="mailto:hello@coltonbatts.com" class="text-xl font-bold text-charcoal underline underline-offset-8 decoration-gray-300 hover:decoration-charcoal transition-all">
					hello@coltonbatts.com
				</a>
			</div>
		</div>
	</div>
</BaseLayout>
