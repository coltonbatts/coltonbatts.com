---
import { navItems, site } from '../config';
import Wordmark from '../components/Wordmark.astro';
import RivePlayer from '../components/interactive/RivePlayer.astro';
import { resolveRiveRecipe } from '../content/rive-recipes';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = site.title, description = site.description } = Astro.props;
const fullTitle = title === site.title ? title : `${title} | ${site.title}`;
const currentPath = Astro.url.pathname;
const routeRecipe = resolveRiveRecipe('routePunctuation');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon-custom.png" />
		<link rel="apple-touch-icon" href="/favicon-custom.png" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preload" href="/fonts/GeistPixel-Square.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/GeistPixel-Circle.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/GeistPixel-Triangle.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/GeistPixel-Grid.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/GeistPixel-Line.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Inter-Black.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/IBMPlexMono-Bold.woff2" as="font" type="font/woff2" crossorigin />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL('/og-image.png', Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL('/og-image.png', Astro.url)} />

		<title>{fullTitle}</title>
	</head>

	<body class="antialiased min-h-screen flex flex-col">

		<header class="border-b-2 border-charcoal">
			<nav class="max-w-5xl mx-auto px-6 py-5">
				<div class="flex items-center justify-between">

					<a href="/" class="block" aria-label="Home">
						<Wordmark />
					</a>

					<button
						id="mobile-menu-toggle"
						class="md:hidden flex flex-col gap-1.5 p-2 border-2 border-charcoal hover:bg-charcoal hover:text-manual transition-colors group"
						aria-label="Toggle Menu"
						aria-expanded="false"
					>
						<span class="w-5 h-0.5 bg-charcoal group-hover:bg-manual transition-colors"></span>
						<span class="w-5 h-0.5 bg-charcoal group-hover:bg-manual transition-colors"></span>
						<span class="w-5 h-0.5 bg-charcoal group-hover:bg-manual transition-colors"></span>
					</button>

					<ul
						id="nav-menu"
						class="hidden md:flex gap-8 font-mono text-label uppercase tracking-instrument text-charcoal"
					>
						{navItems.map((item) => (
							<li>
								<a
									href={item.href}
									class:list={[
										'hover:text-charcoal transition-colors relative py-1',
										{
											'text-charcoal': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)),
										},
									]}
								>
									{item.label}
									{(currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))) && (
										<span class="absolute -bottom-[1.4rem] left-0 w-full h-[2px] bg-raw"></span>
									)}
								</a>
							</li>
						))}
					</ul>
				</div>

				<div
					id="mobile-menu"
					class="hidden md:hidden pt-6 pb-2 mt-5 border-t-2 border-charcoal"
				>
					<ul class="flex flex-col gap-4 font-mono text-label uppercase tracking-instrument text-charcoal">
						{navItems.map((item) => (
							<li>
								<a
									href={item.href}
									class:list={[
										'hover:text-charcoal transition-colors block py-1',
										{
											'text-charcoal border-l-2 border-raw pl-3': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)),
										},
									]}
								>
									{item.label}
								</a>
							</li>
						))}
					</ul>
				</div>
			</nav>
		</header>

		<main class="flex-1">
			<slot />
		</main>

		<div id="motion-intro-curtain" aria-hidden="true">
			<span></span>
			<span></span>
		</div>
		<div id="route-kinetic-punctuation" aria-hidden="true"></div>
		<RivePlayer
			id="route-punctuation-player"
			class="route-punctuation-rive"
			src="/rive/ui/button.riv"
			recipe={routeRecipe}
			respectReducedMotion={false}
		>
			<div slot="fallback" class="route-punctuation-fallback" aria-hidden="true"></div>
		</RivePlayer>

		<footer class="mt-20 border-t-2 border-charcoal">
			<div class="max-w-5xl mx-auto px-6 py-10 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
				<p class="font-mono text-meta uppercase text-charcoal">
					&copy; {new Date().getFullYear()} Colton Batts
				</p>
				<p class="font-mono text-meta uppercase text-charcoal">
					{new Date().toISOString().split('T')[0].replace(/-/g, '.')}
				</p>
			</div>
		</footer>
		<!-- Mobile menu — standalone, no dependencies, runs immediately -->
		<script is:inline>
			(function () {
				var toggle = document.getElementById('mobile-menu-toggle');
				var menu = document.getElementById('mobile-menu');
				if (!toggle || !menu) return;

				toggle.addEventListener('click', function () {
					var isOpen = !menu.classList.contains('hidden');
					menu.classList.toggle('hidden');
					toggle.classList.toggle('is-open');
					toggle.setAttribute('aria-expanded', String(!isOpen));
				});

				// Close menu when a nav link is tapped
				menu.addEventListener('click', function (e) {
					if (e.target.tagName === 'A') {
						menu.classList.add('hidden');
						toggle.classList.remove('is-open');
						toggle.setAttribute('aria-expanded', 'false');
					}
				});
			})();
		</script>

		<!-- Animations — module bundle, loaded async -->
		<script type="module">
			import { initLotties, cleanupLotties } from '../animations/lottie';
			import { initReveal, cleanupReveal } from '../animations/reveal';
			import { initMotionOS, notifyRouteTransitionEnd, notifyRouteTransitionStart } from '../motion/orchestrator';

			const initMotion = () => {
				initMotionOS();
				initLotties();
				initReveal();
				notifyRouteTransitionEnd();
			};

			const cleanupMotion = () => {
				notifyRouteTransitionStart();
				cleanupLotties();
				cleanupReveal();
			};

			if (document.readyState === 'loading') {
				document.addEventListener('DOMContentLoaded', initMotion, { once: true });
			} else {
				initMotion();
			}

			document.addEventListener('astro:page-load', initMotion);
			document.addEventListener('astro:before-swap', cleanupMotion);
			document.addEventListener('astro:before-preparation', cleanupMotion);
		</script>
	</body>
</html>
