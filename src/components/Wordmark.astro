---
/**
 * Wordmark.astro
 * ==============
 * Text-based wordmark for ColtonBatts.com.
 * No PNG. No external dependency. Lives in the code.
 *
 * The wordmark renders "ColtonBatts" in UnifrakturMaguntia (Gothic
 * blackletter) with a subtle CSS glitch effect on hover â€” the text
 * briefly fractures, revealing a crimson ghost layer underneath.
 *
 * The glitch is CSS-only. Zero JavaScript. Respects reduced motion.
 */

interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;
---

<span class={`wordmark ${className}`.trim()} aria-label="Colton Batts">
	<span class="wordmark__text" data-text="ColtonBatts" aria-hidden="true">
		ColtonBatts
	</span>
</span>

<style>
	.wordmark__text {
		font-family: 'Geist Pixel Circle', sans-serif;
		font-size: 1.5rem;
		font-weight: 900;
		color: var(--ink);
		letter-spacing: 0.1em;
		text-transform: uppercase;
		display: inline-block;
		position: relative;
	}
</style>
