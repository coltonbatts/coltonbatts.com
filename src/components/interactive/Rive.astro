---
import type { RiveInputs, RiveInteraction, RiveMode } from '../../animations/rive';
import RivePlayer from './RivePlayer.astro';

interface Props {
	src: string;
	artboard?: string;
	stateMachine?: string;
	autoplay?: boolean;
	mode?: RiveMode;
	inputs?: RiveInputs;
	interactions?: RiveInteraction[];
	class?: string;
	ariaLabel?: string;
	debug?: boolean;
	respectReducedMotion?: boolean;
}

const props = Astro.props as Props;
---

<RivePlayer {...props} />
